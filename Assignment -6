package main

import "fmt"

type vehicle struct {
	Doors int
	color string
}

//6.3.2

type truck struct {
	truck     string
	Fourwheel bool
	color     string
}

//6.3.3

type sedan struct {
	door      string
	Fourwheel bool
	color     string
}

func main() {
	Maybach := sedan{

		door:      "Fourdoor",
		Fourwheel: true,
		color:     "Grey",
	}
	fmt.Println(Maybach)

	var Accord vehicle

	Accord.Doors = 4
	Accord.color = "Grey"

	fmt.Println(Accord)

	ford := truck{

		truck:     "Sixdoor",
		Fourwheel: false,
		color:     "Red",
	}
	fmt.Println(ford)

}
